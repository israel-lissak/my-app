{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "slices": {
            "type":"array",
            "items": {
                "$ref": "#/definitions/slice"
            }     
        }
    },
    "allOf": [
        {
            "$comment": "If there are at least 2 slices they must have duration defined",
            "if": {
                "properties": {
                    "slices": {
                        "type": "array",
                        "minItems": 2
                    }
                }
            },
            "then": {
                "properties": {
                    "slices": {
                        "items": {
                            "properties": {
                                "duration": {
                                    "type": "number",
                                    "minimum": 40e-6,
                                    "maximum": 3e3
                                }
                            }
                        }
                    }
                }
            },
            "else": {
                "properties": {
                    "slices": {
                        "items": {
                            "properties": {
                                "duration": {
                                    "type": "null"
                                }
                            }
                        }
                    }
                }
            }
        }
    ],
    "definitions": {
        "slice": {
            "type": "object",
            "required": ["variation", "duration", "recipes", "power"],
            "properties": {
                "variation": {
                    "$ref": "#/definitions/variation"
                },
                "duration": {
                    "type": ["number", "null"],
                    "$comment": "The correct definition of duration is in the 'if' condition above"
                },
                "power": {
                    "type": "number",
                    "minimum": 10e-6,
                    "maximum": 6e9
                },
                "recipes": {
                    "type": "array",
                    "items": {
                        "allOf": [
                            {
                                "$ref": "#/definitions/recipe"
                            }
                        ]
                    }
                },
                "innerSlices": {
                    "type": "array",
                    "items": {
                        "allOf": [
                            {
                                "$ref": "#/definitions/slice"
                            },
                            {
                                "properties": {
                                    "variation": {
                                        "not": {
                                            "const": "single"
                                        }
                                    }
                                }
                            }
                        ]
                    }
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "variation": {
                                "const": "single"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "recipes": {
                                "maxItems": 1
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "variation": {
                                "oneOf": [
                                    { "const": "multi" },
                                    { "const": "cyclic" }
                                ]
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "recipes": {
                                "minItems": 2
                            }
                        }
                    }
                },
                {
                    "$comment": "this condition makes duration within recipes must be defined",
                    "if": {
                        "properties": {
                            "variation": {
                                "const": "cyclic"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "recipes": {
                                "items": {
                                    "allOf": [
                                        {
                                            "properties": {
                                                "duration": {
                                                    "type": "number",
                                                    "minimum": 0
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "else": {
                        "properties": {
                            "recipes": {
                                "items": {
                                    "allOf": [
                                        {
                                            "properties": {
                                                "duration": {
                                                    "type": "null"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            ]
        },
        "variation": {
            "title": "Determines how the slice behaves",
            "enum": ["single", "multi", "cyclic"],
            "oneOf": [
                {
                    "const": "single",
                    "description": "This slice has a single recipe."
                },
                {
                    "const": "multi",
                    "description": "This slice can have multiple recipes."
                },
                {
                    "const": "cyclic",
                    "description": "This slice can have multiple recipes."
                }
            ]
        },
        "recipe": {
            "required": ["kind"],
            "oneOf": [
                {
                    "type": "object",
                    "required": ["sugar"],
                    "additionalProperties": false,
                    "properties": {
                        "kind": {
                            "const": "cake"
                        },
                        "duration": true,
                        "sugar": {
                            "$ref": "#/definitions/sugar"
                        } 
                    }
                },
                {
                    "type": "object",
                    "required": ["sugar", "flour", "egg_count", "krembo"],
                    "additionalProperties": false,
                    "properties": {
                        "kind": {
                            "const": "cookie"
                        },
                        "duration": true,
                        "sugar": {
                            "$ref": "#/definitions/sugar"
                        },
                        "flour": {
                            "$ref": "#/definitions/flour"
                        },
                        "egg_count":{
                            "$ref": "#/definitions/egg_count"
                        }
                    }
                },
                {
                    "type": "object",
                    "required": ["start_cooking", "end_cooking", "cooking_time"],
                    "additionalProperties": false,
                    "properties": {
                        "kind": {
                            "const": "sweet"
                        },
                        "duration": true,
                        "start_cooking": {
                            "title": "Start Cooking",
                            "$ref": "#/definitions/sugar"
                        },
                        "end_cooking": {
                            "title": "End Cooking",
                            "$ref": "#/definitions/sugar"
                        },
                        "cooking_time": {
                            "title": "Cooking Time",
                            "type": "number",
                            "minimum": 40e-6,
                            "maximum": 3e3
                        },
                        "temperature_gap":{
                            "title": "Temperature Gap",
                            "$ref": "#/definitions/flour"
                        },
                        "cooking_dwell":{
                            "title": "Cooking Dwell",
                            "type": "number",
                            "minimum": 1e-6,
                            "maximum": 1.5e3
                        }
                    }
                },
                {
                    "type": "object",
                    "required": ["sugar", "path"],
                    "additionalProperties": false,
                    "properties": {
                        "kind": {
                            "const": "pancake"
                        },
                        "duration": true,
                        "path": {
                            "title": "Path to the pancake",
                            "type": "string",
                            "pattern": "^.*[.](bin|xdat|xhdr)$"
                        },
                        "sugar": {
                            "$ref": "#/definitions/sugar"
                        }
                    }
                },
                {
                    "type": "object",
                    "required": ["sugar", "path", "flour", "krembo"],
                    "additionalProperties": false,
                    "properties": {
                        "duration": true,
                        "kind": {
                            "const": "american_pancake"
                        },
                        "path": {
                            "title": "Path to the pancake",
                            "type": "string",
                            "pattern": "^.*[.](wav|mp4)$"
                        },
                        "sugar": {
                            "$ref": "#/definitions/sugar"
                        },
                        "flour": {
                            "$ref": "#/definitions/flour"
                        },
                        "krembo": {
                            "$ref": "#/definitions/krembo"
                        }
                    }
                },
                {
                    "type": "object",
                    "required": ["sugar", "flour", "krembo"],
                    "additionalProperties": false,
                    "properties": {
                        "kind": {
                            "const": "biscuit"
                        },
                        "duration": true,
                        "sugar": {
                            "$ref": "#/definitions/sugar"
                        },
                        "flour": {
                            "$ref": "#/definitions/flour"
                        },
                        "krembo": {
                            "$ref": "#/definitions/krembo"
                        }
                    }
                },
                {
                    "type": "object",
                    "required": ["sugar", "flour", "brownie_string", "brownie_time", "brownie_cooking_time"],
                    "additionalProperties": false,
                    "properties": {
                        "kind": {
                            "const": "brownie"
                        },
                        "duration": true,
                        "brownie_string": {
                            "title": "Brownie String",
                            "type": "string",
                            "pattern": "^[0-9a-fA-F]+$"
                        },
                        "sugar": {
                            "$ref": "#/definitions/sugar"
                        },
                        "flour": {
                            "$ref": "#/definitions/flour"
                        },
                        "brownie_time": {
                            "title": "Brownie Time",
                            "type": "number"
                        },
                        "brownie_cooking_time": {
                            "title": "Brownie Cooking Time",
                            "type": "number"
                        },
                        "krembo": {
                            "$ref": "#/definitions/krembo"
                        }
                    }
                }

            ]
        },
        "sugar":{
            "title": "Sugar Content",
            "description": "Sugar content in grams",
            "type": "integer",
            "minimum": 10e6,
            "maximum": 6e9
        },
        "flour": {
            "title": "Flour Content",
            "description": "Flour content in grams",
            "type": "integer",
            "minimum": 0,
            "maximum": 164e6
        },
        "egg_count": {
            "title": "Flour Content",
            "description": "Number of eggs used in the recipe",
            "type": "integer",
            "minimum": 0,
            "maximum": 164e6
        },
        "krembo":{
            "oneOf": [
                {
                    "$comment": "krembo fields are required, but it can be null, this is for the frontend",
                    "type": "null"
                },
                {
                    "type": "object",
                    "required": ["kind", "wrap"],
                    "additionalProperties": false,
                    "properties": {
                        "kind": {
                            "const": "vanilla"
                        },
                        "wrap": {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 300
                        }
                    }
                },
                {
                    "type": "object",
                    "required": ["kind", "code", "crackles"],
                    "additionalProperties": false,
                    "properties": {
                        "kind": {
                            "const": "mocha"
                        },
                        "code": {
                            "title": "Mocha Code",
                            "type": "string",
                            "maxLength": 3
                        },
                        "crackles": {
                            "title": "Mocha Crackles",
                            "type": "string",
                            "enum": ["I", "N"],
                            "default": "I",
                            "oneOf": [
                                {
                                    "const": "N",
                                    "description": "Normal."
                                },
                                {
                                    "const": "I",
                                    "description": "Inverse."
                                }
                            ]
                        }
                    }
                }
            ]
        }
    }
}

